<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="br_sale_stock_order_form" model="ir.ui.view">
        <field name="name">br_sale_stock.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="outras_despesas" invisible="0" />
                <field name="valor_seguro" invisible="0" />
                <field name="valor_frete" invisible="0" />
            </xpath>
            <field name="amount_tax" position="after">
                <field name="total_despesas" readonly="1" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                <field name="total_seguro" readonly="1" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                <field name="total_frete" readonly="1" widget='monetary' options="{'currency_field': 'currency_id'}" />
            </field>
        </field>
    </record>
</odoo>
